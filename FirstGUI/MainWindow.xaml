<Window x:Class="FirstGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" MinHeight="300" MinWidth="400">
    <Grid>
        <Button Content="Background Change" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click" Margin="100,140,0,0" Height="80" Width="200"/>

        <Label Content="Current Color:"  FontWeight="Bold" FontSize="20px" Padding="0" HorizontalAlignment="Center" Margin="100,80,0,0" VerticalAlignment="Top" Background="White"/>
        <Label Content="255,255,255" x:Name="rgbCode" FontWeight="Bold" FontSize="20px" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="White" Margin="105,110,0,0"/>
        <Label Content="Past Colors:" FontWeight="Bold" FontSize="20px" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Height="29" Width="120"/>
        <ListBox x:Name="colorListBox" Margin="0,29,0,0" SelectionChanged="colorListBox_SelectionChanged" Width="120" HorizontalAlignment="Left"/>

    </Grid>
</Window>
